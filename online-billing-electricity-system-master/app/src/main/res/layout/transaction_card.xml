<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/bill_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:text="Vi Home"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <View
                android:id="@+id/horizontal_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/bill_date"
                android:layout_marginTop="3dp"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/bill_no_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal_line"
                android:layout_marginTop="5dp"
                android:text="Tháng"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bill_no_text"
                android:text="Số hóa đơn" />


            <TextView
                android:id="@+id/water_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/month"
                android:layout_marginTop="5dp"
                android:text="Tiền nước"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/month"
                android:layout_marginTop="5dp"
                android:gravity="top|end"
                android:text="tổng cộng"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/water_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/water_title"
                android:text="tổng cộng" />

            <TextView
                android:id="@+id/water_unit_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/water_title"
                android:gravity="top|end"
                android:textSize="20dp"
                android:text="Tổng cộng" />




            <TextView
                android:id="@+id/electric_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/water_unit"
                android:layout_marginTop="5dp"
                android:text="Tiền điện"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/water_unit"
                android:layout_marginTop="5dp"
                android:gravity="top|end"
                android:text="tổng cộng"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/electric_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/electric_title"
                android:text="tổng cộng" />

            <TextView
                android:id="@+id/electric_unit_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/electric_title"
                android:gravity="top|end"
                android:textSize="20dp"
                android:text="Tổng cộng" />



            <TextView
                android:id="@+id/home_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/electric_unit"
                android:layout_marginTop="5dp"
                android:text="Tiền nhà"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/electric_unit"
                android:layout_marginTop="5dp"
                android:gravity="top|end"
                android:text="tổng cộng"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/home_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_title"
                android:text="tổng cộng" />

            <TextView
                android:id="@+id/home_unit_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_title"
                android:gravity="top|end"
                android:text="Tổng cộng "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/total_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_unit_total"
                android:gravity="top|end"
                android:text="Tổng cộng tất cả"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/totalAll_unit_total"
                android:layout_width="397dp"
                android:layout_height="60dp"
                android:layout_below="@+id/total_unit"
                android:gravity="top|end"
                android:textSize="30dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Tổng cộng" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>